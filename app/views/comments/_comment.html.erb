<p>
<%= comment.user.email %>
<span>:</span>
<%= comment.content %>
	
</p>
<% if user_signed_in? %>
    <% if comment.user_id == current_user.id %>
		<%= link_to 'Edit', edit_article_comment_path(comment.article, comment), class: "btn btn-success" %>
		<%= link_to 'Delete', article_comment_path(comment.article, comment),  method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} %>
	<% end %>
<% end %>